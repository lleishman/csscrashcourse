<script type="text/javascript">
  var article = document.getElementsByTagName("article");
  for (var i = 0; i < article.length; i++) {
    var images = article[i].getElementsByTagName("img");
    for (var j = 0; j < images.length; j++) {
      images[j].addEventListener("click",function(){
        var focusImage = document.getElementsByClassName("img-focus-container")[0];
        var imgSrc = this.getAttribute("src");
        var imgAlt = this.getAttribute("alt");
        // if image is below 1920px
        if(/_[\d]+/.test(imgSrc)){// check if image has with _0000. if true replace /000/ = /xxx/ and _000 = _xxx.
          imgSrc = imgSrc.replace(/\/[\d]+\//g,"/xxx/");
          imgSrc = imgSrc.replace(/_[\d]+/g,"_xxx");
          //image varies on window width the xxx is replaced with the image size depending on screen width
          if(window.innerWidth > 1440){
            imgSrc = imgSrc.replace("/xxx/","/");
            imgSrc = imgSrc.replace("_xxx","");
          }
          else if(window.innerWidth > 1024){
            imgSrc = imgSrc.replace(/xxx/g,"1440");
          }
          else if(window.innerWidth > 768){
            imgSrc = imgSrc.replace(/xxx/g,"1024");
          }
          else if(window.innerWidth > 480){
            imgSrc = imgSrc.replace(/xxx/g,"768");
          }
          else if(window.innerWidth > 320){
            imgSrc = imgSrc.replace(/xxx/g,"480");
          }
          else{//this is surely lower than 320. if not it was catched above
            imgSrc = imgSrc.replace(/xxx/g,"320");
          }
        }
        //make first letter uppercase for the image title
        imgAlt = imgAlt.toLowerCase().replace(/\b[a-z]/g, function(letter) {
            return letter.toUpperCase();
        });
        //set title of image
        document.getElementsByClassName("img-title")[0].innerHTML = imgAlt + '<span class="img-closer">&times;</span>';

        //remove display none
        document.getElementsByClassName("img-focus-bg")[0].parentNode.classList.remove("none");
        //put loading bar


        // now put the validated image url to the image src of focus image
        focusImage.getElementsByTagName("img")[0].src = imgSrc;
        //focusImage.getElementsByTagName("img")[0].onload = function(){ the "onload" slows down the downloaded image
          document.getElementById("loadingBar").style.marginTop = "-22px";
          focusImage.getElementsByTagName("img")[0].classList.remove('none');
        //}

        //check if image src is _map and change its max-width to 500px
        if(/_map/g.test(imgSrc)){
          focusImage.getElementsByTagName("img")[0].style.maxWidth = "550px";
          document.getElementsByClassName("img-header")[0].style.maxWidth = "550px";
          document.getElementById("loadingBar").style.maxWidth = "550px";
        }
        else{
          focusImage.getElementsByTagName("img")[0].style.maxWidth = "85%";
          document.getElementsByClassName("img-header")[0].style.maxWidth = "85%";
          document.getElementById("loadingBar").style.maxWidth = "85%";
        }
      });
    }
  }
</script>
