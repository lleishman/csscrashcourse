function createCookie( name ){
  // create a cookie that has 1 year expiration_date
  var expiration_date = new Date();
  var today = new Date();
  var cookie_string = '';
  if (name == "subscribed") {
      expiration_date.setFullYear( expiration_date.getFullYear() + 1 ); // 1 year no popup
      }
  else{
      expiration_date.setDate( expiration_date.getDate() + 3 ); // 3 days no popup
      }
  document.cookie = name + "=" + today + ";" + "test_cookies=true; path=/; expires=" + expiration_date.toUTCString();
}

function getCookie( name ) {
    var dc = document.cookie;
    var prefix = name + "=";
    var begin = dc.indexOf( "; " + prefix );
    if ( begin == -1 ) {
        begin = dc.indexOf( prefix );
        if (begin != 0) return null;
    }
    else
    {
        begin += 2;
        var end = document.cookie.indexOf( ";", begin );
        if ( end == -1 ) {
        end = dc.length;
        }
    }
    return decodeURI(dc.substring(begin + prefix.length, end));
}

function appear(el) {
    el.style.opacity = 1;
    var tick = function() {
      el.style.opacity = +el.style.opacity - 0.0050;
      if (+el.style.opacity < 1) {
        (window.requestAnimationFrame && requestAnimationFrame(tick)) || setTimeout(tick, 50)
      }
    };
    tick();
}

